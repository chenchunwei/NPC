@{
    ViewBag.Title = "已发送彩信列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Fluent.Infrastructure.Utilities
@model NPC.Application.ManageModels.Messages.MessageListModel
<div class="workgroundin">
    <ul class="head_content">
        @Html.Partial("_LiButtonOfToolbar", new Tuple<string, string, string, bool>("批量删除", "batchDelBtn", "icon_4.gif", false))
    </ul>
</div>
<form action="" method="GET" id="searchForm">
<div class="main_search">
    <div class="mc_search">
        <div class="pic">
            <img src="@Url.Content("~/Content/images/icon_12.gif")" alt="" /></div>
        <div class="font">
            &nbsp; &nbsp; &nbsp; &nbsp;
        </div>
        <div class="s1">
            <select>
                <option>标题</option>
            </select></div>
        <div class="i1">
            @Html.TextBoxFor(o => o.MessageSearchModel.MessageQueryItem.Title)
        </div>
        @Html.Partial("_DivButton", new Tuple<string, string>("搜索", "searchBtn"))
    </div>
</div>
</form>
<div class="main_content">
    <div class="topline">
        <div class="span_1">
            <input type="checkbox" id="topChk" /></div>
        <div class="span_2">
            操作</div>
        <div class="span_3">
            标题</div>
        <div class="span_2">
            电话</div>
        <div class="span_2">
            内容</div>
        <div class="span_2">
            创建时间</div>
        <div class="span_4">
        </div>
        <div class="span_4">
        </div>
        <div class="span_4">
        </div>
    </div>
    <div class="row">
        @if (!Model.Messages.Any())
        {
            <div class="noRowline">
                未找到符合条件的相关记录信息！
            </div>
        }
        @foreach (var row in Model.Messages)
        {
            <div class="rowline">
                <div class="span_1">
                    <input type="checkbox" name="ids" value="@row.Id" /></div>
                <div class="span_2">
                    <a href="javascript:;" onclick="singleDel('@row.Id')">删除</a></div>
                <div class="span_3">
                    @row.Title</div>
                <div class="span_2">
                    @row.Tel
                </div>
                <div class="span_2">
                    @(MyString.SubString(row.MessageContent, 30, "…"))</div>
                <div class="span_2">
                    @row.RecordDescription.DateOfCreate.ToString("yyyy-MM-dd")</div>
                <div class="span_4">
                </div>
                <div class="span_4">
                </div>
                <div class="span_4">
                </div>
            </div> 
        }
        <div class="footBar">
            <div class="fb_content">
                <ul class="fb_button">
                    @Html.Partial("_LiButton", new Tuple<string, string>("全选", "chkAllBtn"))
                    @Html.Partial("_LiButton", new Tuple<string, string>("取消", "unChkAllBtn"))
                    @Html.Partial("_LiButton", new Tuple<string, string>("反选", "invertBtn"))
                </ul>
                <div class="fb_page">
                    <script type="text/javascript">
                        var pg = new showPages('pg');
                        pg.argName = 'p';  //定义参数名(可选,缺省为page)
                        pg.newPage = @Model.MessageSearchModel.MessageQueryItem.Pagination.PageIndex;
                        pg.count =  @Model.MessageSearchModel.MessageQueryItem.Pagination.TotalRecordsCount;
                        pg.pageCount = @Model.MessageSearchModel.MessageQueryItem.Pagination.TotalPage;
                        pg.printHtml(1);    //显示
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    var urlOfDel = '@Url.Action("Delete", "Messages")';
    function singleDel(id) {
        var delIds = [];
        delIds.push(id);
        controller.del(urlOfDel, delIds);
    }
    $("#chkAllBtn").click(function () {
        controller.batchOfChk("input[name=ids]", 1);
    });
    $("#unChkAllBtn").click(function () {
        controller.batchOfChk("input[name=ids]", 0);
    });
    $("#invertBtn").click(function () {
        controller.batchOfChk("input[name=ids]", 2);
    });
    $("#topChk").click(function () {
        var result = $(this).attr("checked") ? 1 : 0;
        controller.batchOfChk("input[name=ids]", result);
    });
    
    $("#batchDelBtn").click(function () {
        var delIds = [];
        $("input[name=ids]:checked").each(function (i, o) {
            delIds.push($(o).val());
        });
        controller.del(urlOfDel, delIds);
    });
    $("#searchBtn").click(function () {
        $("#searchForm").submit();
    });
</script>
