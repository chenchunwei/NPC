@{
    ViewBag.Title = "OpenMas服务配置";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.ComponentModel
@model   NPC.Application.ManageModels.OpenMasConfigs.EditOpenMasConfigModel
<script type="text/javascript" src="@Url.Content("~/Scripts/xheditor-1.1.14/xheditor-1.1.14-zh-cn.min.js")"></script>
<div class="workgroundin" style="height: 5px;">
</div>
<form method="post" action="" id="mainForm" style="margin: 0px;" enctype="multipart/form-data">
<div class="main_content">
    <div class="main_search">
        <div class="mc_search">
            <div class="pic">
                <img src="@Url.Content("~/Content/images/icon_12.gif")" alt="" /></div>
            <div class="font">
                提示：请认真填写，所填信息均来自运营商接口数据!</div>
        </div>
    </div>
    <div class="row">
        <div class="treeBody" style="padding-top: 5px;">
            <div class="tipsOrange">
                <div class="icon">
                </div>
                <div class="font">
                    提示：带<span style="color: red;">*</span>号为必填项！</div>
            </div>
            <table class="fromTable" width="100%">
                <tr>
                    <th style="width: 220px;">
                        <span style="color: red;">*</span> 应用帐号：
                    </th>
                    <td>
                        @Html.TextBoxFor(o => o.AppAccount, new { style = "width:380px;", maxlength = 150 })
                    </td>
                </tr>
                <tr>
                    <th>
                        <span style="color: red;">*</span> 应用密码：
                    </th>
                    <td>
                        @Html.TextBoxFor(o => o.AppPwd, new { style = "width:380px;", maxlength = 150 })
                    </td>
                </tr>
                <tr>
                    <th>
                        <span style="color: red;">*</span> Mas服务器地址：
                    </th>
                    <td>
                        @Html.TextBoxFor(o => o.MasService, new { style = "width:380px;", maxlength = 250 })
                    </td>
                </tr>
                <tr>
                    <th>
                        <span style="color: red;">*</span> 扩展号：
                    </th>
                    <td>
                        @Html.TextBoxFor(o => o.ExtensionNo, new { style = "width:80px;", maxlength = 10 })&nbsp;必须为整数
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="wrapper_btn">
                            <div class="btn" id="submitBtn">
                                <div class="fbb_left">
                                    <img src="@Url.Content("~/Content/Images/fbb_left.jpg")" alt="" /></div>
                                <div class="fbb_center">
                                    保存设置</div>
                                <div class="fbb_right">
                                    <img src="@Url.Content("~/Content/Images/fbb_right.jpg")" alt="" /></div>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="footBar">
            <div class="fb_content">
            </div>
        </div>
    </div>
</div>
</form>
<script type="text/javascript">
    $(function () {

        $("#mainForm").validate({
            ignore: "",
            rules: {
                "AppAccount": "required",
                "AppPwd": "required",
                "MasService": "required",
                "ExtensionNo": "required"
            },
            messages: {
                "AppAccount": "必填项",
                "AppPwd": "必填项",
                "MasService": "必填项",
                "ExtensionNo": "必填项"
            }
        });
        $("#submitBtn").click(function () {
            $("#mainForm").submit();
        });
    });
</script>
