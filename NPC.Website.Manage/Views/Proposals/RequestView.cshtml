@{
    ViewBag.Title = @Model.Proposal.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using NPC.Domain.Models.FlowNodeInstances
@model NPC.Application.ManageModels.Proposals.RequestViewModel 
<div class="workgroundin" style="height: 5px;">
</div>
<div class="main_content">
    @Html.Partial("_FlowHistory", Model.Flow)
    <div class="workgroundin" style="height: 5px;">
    </div>
    <div class="main_search">
        <div class="mc_search">
            <div class="pic">
                <img src="@Url.Content("~/Content/images/icon_12.gif")" alt="" /></div>
            <div class="font">
                流程详情：</div>
        </div>
    </div>
    <div class="row">
        <div class="treeBody" style="padding-top: 5px;">
            @Html.Partial("_ProposalDetail", Model.Proposal)
            <table class="fromTable" width="100%">
                <tr class="header">
                    <td colspan="2">
                        &nbsp; &nbsp;补充说明:
                    </td>
                </tr>
                <tr>
                    <th>
                        备注：
                    </th>
                    <td style="padding: 5px 5px;">
                        <form action="" method="POST" style="margin: 0" id="mainForm">
                        <textarea rows="8" cols="120" id="Comment" name="Comment" maxlength="400"></textarea>
                        </form>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="wrapper_btn">
                            <div class="btn" id="submitBtn">
                                <div class="fbb_left">
                                    <img src="@Url.Content("~/Content/Images/fbb_left.jpg")" alt="" /></div>
                                <div class="fbb_center">
                                    提交备注</div>
                                <div class="fbb_right">
                                    <img src="@Url.Content("~/Content/Images/fbb_right.jpg")" alt="" /></div>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="footBar">
            <div class="fb_content">
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#mainForm").validate({
            ignore: "",
            rules: {
                "Comment": "required"
            },
            messages: {
                "Comment": "请填写注释内容"
            }
        });
        $("#submitBtn").click(function () {
            $("#mainForm").submit();
        });
    });
   
</script>
