@{
    ViewBag.Title = "分组管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validator.extension.js")" type="text/javascript"></script>
<div class="workgroundin" style="height: 5px;">
</div>
<div class="main_search">
    <div class="mc_search">
        <div class="pic">
            <img src="@Url.Content("~/Content/images/icon_12.gif")" alt="" /></div>
        <div class="font">
            提示：在机构节点上右键进行删除或添加新节点操作</div>
    </div>
</div>
<div class="contentContainer contentleftBorder">
    <div class="hasTooler">
        <ul>
            @Html.Partial("_LiButtonOfToolbar", new Tuple<string, string, string, bool>("添加新节点", "newNode", "icon_3.gif", true))
            @Html.Partial("_LiButtonOfToolbar", new Tuple<string, string, string, bool>("添加根节点", "newTopNode", "icon_3.gif", false))
        </ul>
    </div>
</div>
<div class="main_content">
    <div class="row">
        <div class="treeBody">
            <table id="treegrid">
            </table>
        </div>
        <div class="footBar">
            <div class="fb_content">
            </div>
        </div>
    </div>
</div>
<div id="wins" style="display: none;">
    <div id="mm" class="easyui-menu" style="width: 120px;">
        <div onclick="append()" data-options="iconCls:'icon-add'">
            添加新分组
        </div>
        <div class="menu-sep">
        </div>
        <div onclick="edit()" data-options="iconCls:'icon-add'">
            编辑分组
        </div>
        <div class="menu-sep">
        </div>
        <div onclick="removeNode()" data-options="iconCls:'icon-remove'">
            移除分组
        </div>
    </div>
    <div id="newWin" class="easyui-window" title="添加新节点" style="width: 500px; height: 150px;
        background-color: #EFEFEF; display: none" data-options="iconCls:'icon-save',modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false">
        <div class="easyui-layout" data-options="fit:true">
            <form id="newForm" action="@Url.Action("EditUnit", "Units")" method="post">
            <div region="center" border="false" style="padding: 10px; background-color: #EFEFEF;">
                <table>
                    <tr>
                        <th width="120px;">
                            分组名称：
                        </th>
                        <td>
                            <input id="FormData_Name" name="FormData.Name" type="text" />
                            <input id="Id" name="Id" type="hidden" />
                            <input id="ParentId" name="ParentId" type="hidden" />
                        </td>
                    </tr>
                </table>
            </div>
            <div region="south" border="false" style="text-align: right; height: 40px; line-height: 30px;
                background-color: #EFEFEF; padding-bottom: 8px; overflow: hidden; padding-right: 8px;">
                <a id="btnSubmitNew" class="easyui-linkbutton" icon="icon-ok" href="javascript:void(0)">
                    提交</a> <a id="btnCancelNew" class="easyui-linkbutton" icon="icon-cancel" href="javascript:void(0)">
                        取消</a>
            </div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $("#treegrid").treegrid({
            url: '@Url.Action("GetDepartments", "Departments")',
            iconCls: 'icon-redo',
            rownumbers: true,
            treeField: 'text',
            idField: 'id',
            fit: false,
            border: 0,
            fitColumns: true,
            title: "&nbsp;分组列表",
            columns: [[
            { field: 'text', title: '分组名称', width: 90, align: 'left' },
            { field: 'id', title: '分组Id', width: 90, align: 'left' }
        ]],
            onLoadSuccess: function () {
            },
            onContextMenu: onContextMenu
        });
        $('#wins,#newWin').show();
        $("#btnSubmitNew").click(function () {
            $("#newForm").submit();
        });
        $("#btnCancelNew").click(function () {
            $("#newWin").window("close");
        });
        $("#newTopNode").click(function () {
            append(true);
        });
        $("#newNode").click(function () {
            append(false);
        });
    });
    function onContextMenu(e, row) {
        e.preventDefault();
        $(this).treegrid('select', row.id);
        $('#mm').menu('show', {
            left: e.pageX,
            top: e.pageY
        });
    }
    function append(isTop) {
        var node = $('#treegrid').treegrid('getSelected');
        if (node != null && !isTop) {
            $("#ParentId").val(node.id);
        }
        $('#newWin').window('open');
        $("#newForm")[0].reset();
    }
    function edit() {
        var row = $("#treegrid").treegrid("getSelected");
        if (row != null) {
            $('#newWin').window('open');
            $("#newForm")[0].reset();
            $("#Id").val(row.id);
            $("#FormData_Name").val(row.text);
        }
    }
    function removeNode() {
        var node = $('#treegrid').treegrid('getSelected');
        if (node) {
            $.post('@Url.Action("DeleteDepartment", "Departments")', { "id": node.id }, function (data) {
                data = evalJson(data);
                if (data.status == "success") {
                    $('#treegrid').treegrid('remove', node.id);
                    showSlide("删除成功!", 3000);
                } else {
                    msgShow("失败信息", "删除组织失败!", "error");
                }
            });
        }
    }
    $("#newForm").validate({
        rules: {
            "FormData.Name": { required: true }
        },
        messages: {
            "FormData.Name": { required: "必须填写组织名称" }
        }
    });
    $("#newForm").submit(function () {
        if (!$("#newForm").valid())
            return false;
        $.post('@Url.Action("EditDepartment", "Departments")', utility.formSerialize($("#newForm")), function (data) {
            data = evalJson(data);
            if (data.status == "success") {
                $("#treegrid").treegrid('reload', $("#Id").val());
                $("#newWin").window("close");
                showSlide("添加成功!", 3000);
            } else {
                msgShow("失败信息", "添加组织失败!", "error");
            }
        });
        return false;
    });
</script>
