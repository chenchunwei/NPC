@{
    ViewBag.Title = "List";
}
@using NPC.Application.MianModels
@model NPC.Application.MianModels.Homes.RecordsModel
<div class="main2">
    @Html.Action("SideBar", "Home")
    <div class="list-right">
        <div class="title">
            <div class="title-name">@Model.ListTitle</div>
        </div>
        <div class="clear"></div>
        <ul>
            @foreach (var article in Model.NodeRecords)
            { 
                <li><a href="@Url.Action("Detail", "Home")?id=@article.Id" target="_blank">@article.FirstTitle</a></li>
            }
        </ul>
        @Html.Partial("_Pager", new PagerModel { Pagination = Model.NodeRecordQueryItem.Pagination })
    </div>
</div>
