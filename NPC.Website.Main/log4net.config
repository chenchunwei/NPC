<?xml version="1.0" encoding="UTF-8"?>
<log4net debug="false">
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="时间:%d %n级别:%level %n日志内容:%m%n-----------------------------------------%n%n" />
    </layout>
  </appender>
  <appender name="NPC\\NPC.MainWeb" type="log4net.Appender.RollingFileAppender" >
    <param name="AppendToFile" value="true" />
    <param name="StaticLogFileName" value="true" />
    <param name="File" value="\logs\\NPC\\NPC.Main.Web" />
    <param name="DatePattern" value="yyyy-MM-dd.TXT" />
    <param name="StaticLogFileName" value="false" />
    <param name="RollingStyle" value="Date" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="时间:%d %n级别:%level %n类名:%c%n文件:%F 第%L行%n日志内容:%m%n-----------------------------------------%n%n" />
    </layout>
  </appender>
  <appender name="NPC\\NPC.MainNhibernate" type="log4net.Appender.RollingFileAppender" >
    <param name="AppendToFile" value="true" />
    <param name="StaticLogFileName" value="true" />
    <param name="File" value="\logs\\NPC\\NPC.Main.Nhibernate" />
    <param name="DatePattern" value="yyyy-MM-dd.TXT" />
    <param name="StaticLogFileName" value="false" />
    <param name="RollingStyle" value="Date" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="时间:%d %n级别:%level %n类名:%c%n文件:%F 第%L行%n日志内容:%m%n-----------------------------------------%n%n" />
    </layout>
  </appender>

  <appender name="NPC\\NPC.MainNhibernateSql" type="log4net.Appender.RollingFileAppender" >
    <param name="AppendToFile" value="true" />
    <param name="StaticLogFileName" value="true" />
    <param name="File" value="\logs\\NPC\\NPC.Main.Nhibernate.Sql" />
    <param name="DatePattern" value="yyyy-MM-dd.TXT" />
    <param name="StaticLogFileName" value="false" />
    <param name="RollingStyle" value="Date" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="时间:%d %n级别:%level %n类名:%c%n文件:%F 第%L行%n日志内容:%m%n-----------------------------------------%n%n" />
    </layout>
  </appender>
  
  <logger name="NHibernate" additivity="false">
    <level value="Warn"/>
    <appender-ref ref="NPC\\NPC.MainNhibernate" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  <logger name="NHibernate.SQL" additivity="false">
    <level value="DEBUG"/>
    <appender-ref ref="NPC\\NPC.MainNhibernateSql" />
    <appender-ref ref="ConsoleAppender" />
  </logger>
  <root>
    <level value="Info" />
    <appender-ref ref="NPC\\NPC.MainWeb" />
    <appender-ref ref="ConsoleAppender" />
  </root>
</log4net>